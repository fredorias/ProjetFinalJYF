@model IEnumerable<DAL_JYF.Match>



<p>
    <br />
    <button id="sourceMatch" class="bouton" style="width:200px">Ajouter les matchs</button>
    <button id="affectationArbitre" style="width:200px;margin-left:50px; cursor: pointer" Margin="5px" class="bouton" >Affecter les Arbitres </button>
</p>
<table class="table">
    <tr>
        <th style="text-align:left;width:100px">
            @Html.DisplayNameFor(model => model.CalendrierMatch)
        </th>
        <th style="text-align:left;width:100px">
            @Html.DisplayNameFor(model => model.HeureMatch)
        </th>
        <th style="text-align:left">
            @Html.DisplayNameFor(model => model.NiveauMatch)
        </th>
        <th style="text-align:left">
            @Html.DisplayNameFor(model => model.Locaux)
        </th>
        <th style="text-align:left">
            @Html.DisplayNameFor(model => model.Visiteurs)
        </th>
        <th style="text-align:left">
            @Html.DisplayNameFor(model => model.ArbitreMatch)
        </th>
        <th style="text-align:left">
            @Html.DisplayNameFor(model => model.AdresseMatch)
        </th>
        <th></th>
    </tr>
    

    @foreach (var item in Model)
    {
        <tr>
            <td  style="text-align:left">
                @Html.DisplayFor(modelItem => item.CalendrierMatch.DateJournee.Day) 
                <text>/</text>
                @Html.DisplayFor(modelItem => item.CalendrierMatch.DateJournee.Month)
                <text>/</text>
                @Html.DisplayFor(modelItem => item.CalendrierMatch.DateJournee.Year)
            </td>
            <td style="text-align:left">
                @Html.DisplayFor(modelItem => item.HeureMatch.Hour)
                <text>h</text>
                @Html.DisplayFor(modelItem => item.HeureMatch.Minute)
                @Html.DisplayFor(modelItem => item.HeureMatch.Second)


            </td>
            <td style="text-align:left">
                @Html.DisplayFor(modelItem => item.NiveauMatch)
            </td>
            <td style="text-align:left">
                @Html.DisplayFor(modelItem => item.Locaux)
            </td>
            <td style="text-align:left">
                @Html.DisplayFor(modelItem => item.Visiteurs)
            </td>
            <td style="text-align:left">
                @Html.DisplayFor(modelItem => item.ArbitreMatch.Nom)
                @Html.DisplayFor(modelItem => item.ArbitreMatch.Prenom)
            </td>
            <td style="text-align:left">
                @Html.DisplayFor(modelItem => item.AdresseMatch.NomAdresse)
                @Html.DisplayFor(modelItem => item.AdresseMatch.Numero)
                @Html.DisplayFor(modelItem => item.AdresseMatch.Rue)
                @Html.DisplayFor(modelItem => item.AdresseMatch.CodePostal)
                @Html.DisplayFor(modelItem => item.AdresseMatch.Ville)
            </td>
            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.MatchId }) |
                @Html.ActionLink("Supprimer", "Delete", new { id = item.MatchId })
            </td>
        </tr>

    }

</table>
@section scripts{
    <script src="~/Scripts/AffectationArbitre.js"></script>
<script src="~/Scripts/SupprimerArbitre.js"></script>
<script src="~/Scripts/SourceMatch.js"></script>
}
